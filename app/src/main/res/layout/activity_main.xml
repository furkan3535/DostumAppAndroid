<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/appsList"
                android:layout_width="378dp"
                android:layout_height="241dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="64dp" >

            </ListView>

            <Button
                android:id="@+id/usageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:text="Button" />

            <Button
                android:id="@+id/soundCheckBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="68dp"
                android:text="CheckSoundLevel" />

            <TextView
                android:id="@+id/sndTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="sadsadadasdasdas" />

            <TextView
                android:id="@+id/stepVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Steps" />

            <TextView
                android:id="@+id/callingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="160dp"
                android:text="sadasdasdasdasdsa" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>